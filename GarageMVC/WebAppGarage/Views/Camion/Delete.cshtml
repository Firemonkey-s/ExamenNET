@model WebAppGarage.Models.CamionViewModel

@{
    ViewData["Title"] = "Suppression";
}

<h1>Confirmation de suppression</h1>

<h3>Etes vous sûr de supprimer cet enregistrement?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proprietaire)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proprietaire)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Immatriculation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Immatriculation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Marque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Marque)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Carburant)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Carburant)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Modele)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Modele)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
