@model WebAppGarage.Models.ReservationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Création d'un RDV</h1>

<h4>Veuillez saisir la date, le type véhicule et l'opération</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VehiculeId" class="control-label"></label>
                <select asp-for="VehiculeId" asp-items="@(ViewBag.ImmatrList as SelectList)" class="form-control"></select>

                <span asp-validation-for="typeVehicule" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateReservation" class="control-label"></label>
                <input asp-for="DateReservation" class="form-control" />
                <span asp-validation-for="DateReservation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Operation" class="control-label"></label>
                <select asp-for="Operation" class="form-control">
                    <option value="0">Entretien</option>
                    <option value="1">Réparation</option>
                </select>
                <span asp-validation-for="Operation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Créer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste</a>
</div>

